@{
    ViewBag.Title = "Videoburst";
    ViewBag.GACode = System.Configuration.ConfigurationManager.AppSettings["GACode"] != null ? System.Configuration.ConfigurationManager.AppSettings["GACode"] : "UA-59804226-1";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" prefix="og: http://ogp.me/ns#">
<head>
    <script type="text/javascript">
        var WebsiteRootPath = '@Url.Content("~/")';    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/images/favicon.ico">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    @Styles.Render("~/Content/themes/fastout/css/bootstrap")
    <!-- Custom styles for this template -->
    @Styles.Render("~/Content/themes/fastout/css/custom")
    @*<link href="~/Content/themes/fastout/css/flexslider.css" rel="stylesheet" media="screen" />*@
    @Styles.Render("~/Content/themes/fastout/css/flexslider")
    @Styles.Render("~/Content/themes/fastout/css/cover")

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    @*@Scripts.Render("~/bundles/warning")*@

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style type="text/css">
        video {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -100;
            transform: translateX(-50%) translateY(-50%);
        }

        body {
            background: none;
        }
    </style>
</head>

<body>
    <div class="site-wrapper">
        <video id="bgVideo" controls preload="true" autoplay loop muted>
            <source src='@Url.Content("~/loop-videos/video.mp4")' type="video/mp4">
        </video>
        <div class="site-wrapper-inner">
            <div class="cover-container">
                <div class="inner cover">
                    <h1>
                        <a href="https://www.videoburst.com" target="_blank"> 
                            <img src='@Url.Content("~/Content/themes/fastout/images/logo-signup.png")' class="img-responsive" alt="" style="margin: auto;">
                        </a>
                    </h1>
                    <h1 class="cover-heading">Professional video made easy.</h1>
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    @*@Scripts.Render("~/bundles/jquery211")
        @Scripts.Render("~/bundles/bootstrap")*@
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    @*@Scripts.Render("~/bundles/workaround")*@
    @*<script src='@Url.Content("~/Scripts/jquery-2.1.1.min.js")'></script>
        <script src='@Url.Content("~/Content/themes/fastout/js/bootstrap.min.js")'></script>*@
    @Html.IncludeVersionedJs(@Url.Content("~/Scripts/jquery-2.1.1.min.js"))
    @Html.IncludeVersionedJs(@Url.Content("~/Content/themes/fastout/js/bootstrap.min.js"))
    @*@Scripts.Render("~/bundles/generic")
        @Scripts.Render("~/bundles/anonymous")*@
    @*<script src='@Url.Content("~/Scripts/generic.js")'></script>
        <script src='@Url.Content("~/Scripts/anonymous.js")'></script>*@
    @Html.IncludeVersionedJs(@Url.Content("~/Scripts/generic.js"))
    @Html.IncludeVersionedJs(@Url.Content("~/Scripts/anonymous.js"))
    @RenderSection("scripts", required: false)
    @Html.Partial("_PopupsPartial")
    <script type="text/javascript">
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', '@ViewBag.GACode', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>
