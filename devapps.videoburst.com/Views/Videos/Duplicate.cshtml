        function StartVideo2(obj) {
            if ($(obj).attr('data-preview-id') != null && $(obj).attr('data-preview-id') != undefined && $(obj).attr('data-preview-id') != '') {

                var index = $(obj).attr('data-preview-id');
                var starttime = $(obj).attr('data-preview-starttime');
