                myPlayer.src(url);
                myPlayer.currentTime(starttime);
                $("#divVideo" + index).show();

                myPlayer.on('timeupdate', function () {
                    if (myPlayer.currentTime() >= endtime) {
                        myPlayer.currentTime(starttime);
                    }
                }, false);
            }
        }
        function StopVideo2(obj) {
            

